{
  "users": [],
  "sessions": [],
  "_note": "This file is used for demo purposes only. In production, user data should be stored in a secure database with proper encryption.",
  "_schema": {
    "user": {
      "id": "string (unique identifier)",
      "email": "string (user email)",
      "password": "string (hashed password - never store plain text)",
      "isVerified": "boolean",
      "verificationCode": "string (null after verification)",
      "verificationCodeExpires": "ISO date string",
      "resetPasswordCode": "string (for password reset)",
      "resetPasswordExpires": "ISO date string",
      "createdAt": "ISO date string",
      "lastLogin": "ISO date string",
      "profile": {
        "firstName": "string",
        "lastName": "string"
      }
    },
    "session": {
      "userId": "string (references user.id)",
      "token": "string (session token)",
      "expiresAt": "ISO date string",
      "createdAt": "ISO date string"
    }
  }
}